{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "plugins": ["react", "jsx-a11y", "import"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/sort-comp": [
      1,
      {
        "order": [
          "type-annotations",
          "static-methods",
          "lifecycle",
          "everything-else",
          "render"
        ]
      }
    ],
    "react/forbid-prop-types": [
      0
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "node_modules",
          "src"
        ]
      }
    }
  },
  "env": {
    "jest": true,
    "browser": true
  }
}
